# 수행준비
for s in range(7):
  print('*****')
print('============================')
for i in range(7):
  for k in range(i+1):
    print(f'*',end='')
  print()
print('============================')
for i in range(7,0,-1):
  for k in range(i,0,-1):
    print(f'*',end='')
  print()
print('============================')
size = 5
for i in range(size):
  for k in range(size-i):
    print(f'*',end='')
  print()
